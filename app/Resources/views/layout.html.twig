{# app/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
    <title>{% block title %} Meurtelle 54 {% endblock %}</title>
</head>
<body lang="fr">
<div class="container">
    <header id="header" class="jumbotron" >
        <h1>Ma plateform d'annonces </h1>
        <p>
            Ce project est propulsé par symfony,
            est construit grâce au MOOC de openclassroom et SensioLabs.
        </p>
        <p>
            <a class="btn btn-primary btn-lg" href="https://openclassrooms.com/courses/developpez-votre-site-web-avec-le-framework-symfony2">
                Participer au MOOC »
            </a>
        </p>
    </header>

    <div class="row">
        <nav id="menu" class="col-md-3">
            <h3>Les Annonces</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('charly_platform_homepage') }}">Accueil</a></li>
                <li><a href="{{ path('charly_platform_add') }}">Ajouter un annonce</a></li>
            </ul>
            <h4>Dernières annonces</h4>
            {{  render(controller("CHARLYPlatformBundle:Advert:menu", {'limit': 3})) }}
        </nav>

        <section id="content" class="col-md-9">
            {% block body %}

            {% endblock %}
        </section>
    </div>
    <footer>
        <aside> <p>By {{ webmaster }} © {{ 'now'|date('Y') }} and beyond.</p></aside>
    </footer>
</div>
{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>