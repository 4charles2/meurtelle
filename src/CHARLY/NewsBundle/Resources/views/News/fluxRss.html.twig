{# src/CHARLY/NewsBundle/Ressources/views/News/fluxRss.html.twig #}

<h6> {{ flux.title }} </h6>
<blockquote>
    <p>{{ flux.description }} </p>
    <cite>{{ flux.link }} </cite>
</blockquote>

<ul id="containNew">
        {% if limit > 0%}
                {% for new in flux.item if limit %}

                    <li class="alert alert-secondary" role="alert" style="display: flex">
                        <div>
                            <a href="{{ path('charly_news_view', {'id': loop.index, 'rss': rss } ) }}"><h3> {{ new.title|raw }}</h3></a>
                            <hr>
                            {% if description %}
                                <p> {{ new.description|raw  }} </p>
                                <cite> Lien : <a href=" {{ new.link }} "> {{ new.link }}</a></cite>
                            {% endif %}
                        </div>
                    </li>
                    {% set limit = limit - 1 %}
                {% endfor %}
        {% else %}
                {% for new in flux.item %}
                    <li class="alert alert-secondary" role="alert" style="display: flex">
                        {% if new.enclosure is defined %}
                            <div>  <img src="{{ new.enclosure|raw  }}" alt="" ></div>
                        {% endif %}
                        <div>
                            <h3> {{ new.title }}</h3>
                            <hr>
                            <p> {{ new.description|raw  }} </p>
                            <cite> <a href=" {{ new.link }} "> {{ new.link }}</a></cite>
                        </div>
                    </li>
                {% endfor %}
        {% endif %}
</ul>
<p>Date de publication : {% if flux.pubDate is defined %} {{ flux.pubDate }} {% endif %}</p>

