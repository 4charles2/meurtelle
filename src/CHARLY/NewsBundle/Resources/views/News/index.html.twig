{# src/CHARLY/NewsBundle/ressources/views/News/index.html.twig #}

{% extends 'CHARLYNewsBundle::layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/style.css" />
    {{ parent() }}
{% endblock %}

{% block menuBundle %}
        <h3>Actualités</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('charly_news_homepage') }}">Toutes l'actualités</a></li>
                <li><a href="https://developper.com">developper.com</a></li>
                <li><a href="https://www.alsacreations.com">alsacreations.com</a></li>
            </ul>
{% endblock %}

{% block body %}
        <div class="maxWidth-child boxShadow" >
    <h4>Toutes l'actualités : </h4>
    {% for flux in url %}
        {{ render(controller('CHARLYNewsBundle:News:readRss', {'flux': flux, 'nbNew': 5, 'description': false, 'article': loop.index })) }}
    {% endfor %}
            </div>
{% endblock %}