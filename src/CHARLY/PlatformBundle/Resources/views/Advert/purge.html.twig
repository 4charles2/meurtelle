{# src/CHARLY/PlatformBundle/ressource/views/Advert/purge.html.twig #}

{% extends "CHARLYPlatformBundle::layout.html.twig" %}

{% block title %} Purge des advert {{ parent() }}{% endblock %}

{% block charlyPlatform_body %}
    <section class="container boxShadow" style="max-width: 80%; background-color: #e9D5c3">
        <article style="padding: 10px; font-family: sans-serif; font-size: 20px">
            <p>Toutes les annonces modifié avant la date : {{ limit_date }} seront supprimées !</p>
            <p>sauf si celle-ci possède une candidature</p>
        </article>
    </section>
    <section class="container insetShadow" style="background-color: #ffff; max-width: 80%">
        {% for advert in adverts %}
        <article style="background-color: #9e9e9e; margin: 5px; ">
            <h2 style="background-color: #056C6F">{{ advert.title }}</h2>
            <div style="padding: 0px 15px;">
                <p>{{ advert.content }}</p>
                <cite>author : {{ advert.author }} et a été <span style="color: #B0413E;">diffusé le : {{ advert.date|date('d/m/Y') }}</span></cite>
                <p>L'annonce possédait : {{ advert.nbApplications }} Candidature</p>
            </div>
        </article>
        {% else %}
            <article>
                <p>Aucune annonce n'à été supprimé car aucun critère de selection na matché</p>
            </article>
        {% endfor %}
    </section>
{% endblock %}